<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/logo_header"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <agency.tango.android.avatarview.views.AvatarView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:av_border_color="@android:color/white"
        android:layout_marginTop="@dimen/w5"
        app:av_border_width="4dp"
        app:av_text_size_percentage="35"
        android:layout_gravity="left"
        android:id="@+id/avatar_view_header"/>

    <TextView
        android:id="@+id/txt_tenHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Dung Tran"
        android:textColor="#0f7196"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/txt_mailHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0f7196"
        android:text="tranhoangdung162@gmail.com" />

</LinearLayout>
