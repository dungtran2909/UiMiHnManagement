<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"

        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/w5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtLoc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pd50"
            android:layout_weight="1"
            android:text="Lọc"
            android:background="@drawable/border_txt_select"
            android:textSize="@dimen/sp18"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/mt10"
            android:textColor="@color/colorBlack"/>
        <Spinner
            android:id="@+id/spinner_TraCuu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/boder"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_NhanVien"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/w5"
        android:layout_marginRight="10dp"
        android:background="@drawable/boder" />
    <LinearLayout
        android:id="@+id/llNgay"
        android:background="@drawable/boder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w5"
                android:textSize="@dimen/pd20"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="Từ ngày"/>
            <TextView
                android:id="@+id/txtNgayFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="Chọn ngày"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/w5"
                android:textSize="@dimen/pd20"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="Đến ngày"/>
            <TextView
                android:id="@+id/txtNgayTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="Chọn ngày"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã Phiếu xuất"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã Nhân viên"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày xuất"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lvPhieuXuat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>